# Bật rewrite engine
RewriteEngine On

# Đặt base URL
RewriteBase /

# Loại bỏ .php extension
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Định tuyến trang login
RewriteRule ^login$ login.php [L]

# Định tuyến trang cart
RewriteRule ^cart$ cart.php [L]

# Định tuyến trang search
RewriteRule ^search$ search_page.php [L]

# Ngăn truy cập trực tiếp vào các file không mong muốn
RewriteCond %{REQUEST_URI} !^/(index\.php|login\.php|cart\.php|search_page\.php)
RewriteRule ^ - [F]